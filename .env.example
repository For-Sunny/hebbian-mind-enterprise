# =============================================================================
# Hebbian Mind Enterprise - Docker Environment Configuration
# Copy this file to .env and customize for your deployment
# =============================================================================

# -----------------------------------------------------------------------------
# Core Configuration
# -----------------------------------------------------------------------------

# Base directory for data storage (inside container)
HEBBIAN_MIND_BASE_DIR=/data/hebbian_mind

# Enable RAM disk for ultra-low latency reads (true/false)
HEBBIAN_MIND_RAM_DISK=false

# RAM disk mount path (if enabled)
HEBBIAN_MIND_RAM_DIR=/app/ramdisk

# RAM disk size for tmpfs mount (bytes, e.g., 536870912 = 512MB)
RAMDISK_SIZE=536870912

# Host path for persistent data volume
HEBBIAN_DATA_PATH=./data/hebbian_mind

# -----------------------------------------------------------------------------
# Hebbian Learning Parameters
# -----------------------------------------------------------------------------

# Activation threshold (0.0-1.0) - minimum score for node activation
HEBBIAN_MIND_THRESHOLD=0.3

# Edge strengthening factor - how much edges strengthen on co-activation
HEBBIAN_MIND_EDGE_FACTOR=1.0

# Maximum edge weight - cap for Hebbian connections
HEBBIAN_MIND_MAX_WEIGHT=10.0

# -----------------------------------------------------------------------------
# FAISS Tether Integration (Optional)
# -----------------------------------------------------------------------------

# Enable FAISS semantic search integration
HEBBIAN_MIND_FAISS_ENABLED=false

# FAISS tether hostname (use service name for docker-compose networking)
HEBBIAN_MIND_FAISS_HOST=faiss-tether

# FAISS tether port
HEBBIAN_MIND_FAISS_PORT=9998

# -----------------------------------------------------------------------------
# PRECOG Concept Extraction (Optional)
# -----------------------------------------------------------------------------

# Enable PRECOG concept extraction integration
HEBBIAN_MIND_PRECOG_ENABLED=false

# Path to PRECOG daemon (inside container)
HEBBIAN_MIND_PRECOG_PATH=/app/precog

# Host path to mount PRECOG daemon from (if using volume mount)
# PRECOG_HOST_PATH=./precog

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
HEBBIAN_MIND_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# License (Enterprise)
# -----------------------------------------------------------------------------

# License key (if required for enterprise features)
HEBBIAN_MIND_LICENSE_KEY=

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------

# Python version for build
PYTHON_VERSION=3.12

# Container memory limit (optional)
# MEMORY_LIMIT=2g

# Container CPU limit (optional)
# CPU_LIMIT=2.0
